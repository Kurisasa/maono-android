<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.com.boha.monitor.library.fragments.ExecProjectSiteListFragment">

    <RelativeLayout
        android:id="@+id/EXEC_PL_top"
        android:background="@color/white"
        android:padding="@dimen/mon_padding"
        android:layout_marginLeft="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/EXEC_PL_title"
            style="@style/Title2TextStyleBlue"
            android:text="Sites"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/EXEC_PL_count"
            style="@style/GreyCircleSmall"
            android:text="00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/EXEC_PL_middle"
        android:layout_below="@id/EXEC_PL_top"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/mon_padding"
        android:padding="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/search_layout"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/EXEC_PL_list"
        android:layout_below="@id/EXEC_PL_middle"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/mon_padding"
        android:dividerHeight="@dimen/mon_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
